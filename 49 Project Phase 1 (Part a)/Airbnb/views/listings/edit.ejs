<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
    <h3>Edit this Listing</h3>
    <div class="col-8 offset-2">
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>">
        </div>
        <div class="row">
            <div class="mb-3 col-md-3">
                <label for="price" class="price">Price</label>
                <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
            </div>
            <div class="mb-3 col-md-3">
                <label for="country" class="country">Country</label>
                <input type="text" name="listing[country]" value="<%= listing.country %>">
            </div>
            <div class="mb-3 col-md-3">
                <label for="location" class="location">Location</label>
                <input type="text" name="listing[location]" value="<%= listing.location %>">
            </div>
        </div>
        <button class="btn btn-dark">Edit</button>
    </form>
</div>
</div>