<% layout("/layouts/boilerplate") %> 
<body>
    <h2>Here are all the Listings</h2>
    <!-- <form method="GET" action="/listings/new">
    <button>Create New</button>
    </form> -->
    <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col">
            <img class="card-img-top" src="<%= listing.image %>" alt="listing_image" height="300rem">
            <div class="card-img-overlay"><%= listing.description %></div>
            <div class="card-body">
              <p class="card-text"><b><%= listing.title %></b> <br> 
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              </p>
            </div>
          </div>
        </a>
        <% } %>  
    </div>
</body>